{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "moduleResolution": "bundler",
    "noImplicitAny": true,

    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["fvtt-types"]
  },
  "include": ["src", "tools", "tools.config.ts", ".vite", "vite-env.d.ts" ]
}
